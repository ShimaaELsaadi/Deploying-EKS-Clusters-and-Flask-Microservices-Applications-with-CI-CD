pipeline {
    agent any
    environment {
        SERVER_URL = 'https://FF15034FDA4601369F6244D2D4A43DCB.gr7.eu-west-2.eks.amazonaws.com'
    }
    
    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ShimaaELsaadi/Microservices.git'
            }
        }
        stage('Build') {
            steps {
                sh "make build"
            }
        }


        stage('Run') {
            steps {
                sh "make run"
            }
        }
        stage('Test') {
            steps {
                sh "make test"
            }
        }

        stage('Docker Push Image') {
            steps {
                script{
                withDockerRegistry(credentialsId: 'dockerhub-credentials', url: 'https://index.docker.io/v1/') {
                    sh "make push"
                }
                }
            }
        }
/*        stage('Provisioning') {
            steps {
                withAWS(credentials: 'AWS_CREDS', region: 'us-east-1') {
                 dir('Terraform') {
                    script {
                        sh '''
                        terraform init
                        terraform validate
                        terraform plan 
                        terraform apply -auto-approve 
                        '''
                    env.SERVER_URL = sh(script: 'aws eks describe-cluster --name microservicesapp-cluster --query "cluster.endpoint" --output text --region eu-west-2', returnStdout: true).trim()


                    }
                     }
        }
        }*/

        stage('K8s Deploy') {
            steps {
            withAWS(credentials: 'AWS_CREDS', region: 'eu-west-2'){
                script{
                 withKubeCredentials(kubectlCredentials: [[caCertificate: '', clusterName: ' microservicesapp-cluster', contextName: '', credentialsId: 'k8s-token', namespace: '', serverUrl: env.SERVER_URL]]) {
                    dir('k8s') {
                        sh '''
                        kubectl apply -f deployment.yml
                        kubectl apply -f service.yml
                        kubectl apply -f ingress.yml
                        '''
                        sleep 20
                }
            }
        }
        }
        }
        }

        
    }  // Closing stages
}  // Closing pipeline
