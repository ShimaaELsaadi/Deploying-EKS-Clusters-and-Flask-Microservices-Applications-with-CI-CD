pipeline {
    agent any

    
    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ougabriel/full-stack-blogging-app.git'
            }
        }
        stage('Build') {
            steps {
                sh "make build"
            }
        }


        stage('Run') {
            steps {
                sh "make run"
            }
        }
        stage('Test') {
            steps {
                sh "make test"
            }
        }

        stage('Docker Push Image') {
            steps {
                script{
                withDockerRegistry(credentialsId: 'dockerhub-cred', url: 'https://index.docker.io/v1/') {
                    sh "make push"
                }
                }
            }
        }
        stage('Provisioning') {
            steps {
                 dir('Terraform') {
                    script {
                        sh '''
                        terraform init
                        terraform validate
                        terraform plan 
                        terraform apply -auto-approve 
                        '''
                    env.SERVER_URL = sh(script: 'aws eks describe-cluster --name microservicesapp-cluster --query "cluster.endpoint" --output text --region eu-west-2', returnStdout: true).trim()


                    }
                     }
        }
        }

        stage('K8s Deploy') {
            steps {
               withKubeCredentials(kubectlCredentials: [[caCertificate: '', clusterName: ' microservicesapp-cluster', contextName: '', credentialsId: 'k8s-token', namespace: 'webapps', serverUrl: env.SERVER_URL]]) {
                dir('k8s') {
                    sh '''
                    kubectl apply -f deployment.yml
                    kubectl apply -f service.yml
                    kubectl apply -f ingress.yml
                    '''
                    sleep 20
                }
            }
        }
        }

        
    }  // Closing stages
}  // Closing pipeline
